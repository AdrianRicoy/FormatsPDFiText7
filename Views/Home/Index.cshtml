@{
    ViewData["Title"] = "Home Page";
}

@if (ViewData["Error"] != null)
{
    <div class="ui negative message">
        <div class="header">
            @ViewData["Error"]
        </div>
        <p>
            D:
        </p>
    </div>
}

@using (Html.BeginForm("Index", "Home", FormMethod.Post))
{
    <div class="container">
        <div class="ui cards">
            @{int i = 2; }
            @foreach (string pdfName in ViewBag.ListPdf)
            {
                <div class="card">
                    <div class="content">
                        <div class="header">
                            @pdfName.Split(';')[0]
                        </div>
                        <div class="meta">
                            iText7
                        </div>
                        <div class="description">
                            @pdfName.Split(';')[1]
                        </div>
                    </div>
                    <div class="extra content">
                        @{ int[] range = { 0, 5 };}
                        <div class="ui two buttons">
                            @switch (Props.RandomNumber(range))
                            {
                                case 0:<input type="submit" value="Generar PDF: @pdfName.Split(';')[0]" name="pdfName" class="ui basic green button" />break;
                                case 1:<input type="submit" value="Generar PDF: @pdfName.Split(';')[0]" name="pdfName" class="ui basic red button" />break;
                                case 2:<input type="submit" value="Generar PDF: @pdfName.Split(';')[0]" name="pdfName" class="ui basic yellow button" />break;
                                case 3:<input type="submit" value="Generar PDF: @pdfName.Split(';')[0]" name="pdfName" class="ui basic blue button" />break;
                                default: <input type="submit" value="Generar PDF: @pdfName.Split(';')[0]" name="pdfName" class="ui basic purple button" />break;
                            }
                        </div>
                    </div>
                </div>

            }
        </div>
    </div>
}

@using (Html.BeginForm("Index", "Home", FormMethod.Post, new { @class = "ui modal" }))
{
    <i class="close icon"></i>
    <div class="header">
        Dialisis Format
    </div>
    <div class="image content">
        <div class="ui medium image">
            <img src="https://semantic-ui.com/images/avatar2/large/rachel.png">
        </div>
        <div class="description">
            <div class="ui header">Initial date</div>
            <div class="ui input">
                <input type="date" name="initialDate">
            </div>
            <div class="ui header">Final date</div>
            <div class="ui input">
                <input type="date" name="finalDate">
            </div>
        </div>
    </div>
    <div class="actions">
        <div class="ui black deny button">
            Nope
        </div>
        <input type="submit" name="pdfName" value="Generar PDF: Dialisis Format" class="ui positive right labeled icon button" />
    </div>
}

@if (ViewData["Dialisis"] != null)
{
    <script>
        $('.ui.modal')
            .modal('show')
            ;
    </script>
}